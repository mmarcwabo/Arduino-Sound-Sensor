// Pins for ultrasonic sensor
const int sampleWindow = 50; // Sample window width in mS (50 mS = 20Hz)
unsigned int sample;

void draw(long dstasd) {
  // cast to string
  String strengen = String(dstasd);

  // set font
  u8g.setFont(u8g_font_gdr25);  
  // set print position
  u8g.setPrintPos(50, 25); 
  
  
  // print string
  u8g.print(strengen);
  
  // draw distance box
  //u8g.drawBox(0, 32, dstasd, 128);    
   u8g.drawLine(0+dstasd, 32, 64, 64);
}

